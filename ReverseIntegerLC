/**
 * @param {number} x
 * @return {number}
 */
var reverse = function(x) {
    let xcopy = x;
    let rev = 0;
    
    if(xcopy<0) {
        xcopy = Math.abs(xcopy);
    }
    while(xcopy>0) {
        let rem = xcopy % 10;
        rev = (10*rev) + rem;
        xcopy = Math.floor(xcopy/10);
    }
    let limit = Math.pow(2,31)
    if(rev> -limit && rev< limit) {
        
        return x<0 ? -rev : rev;
    }
    return 0;
};